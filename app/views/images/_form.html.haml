%h2 Add an Image from your Computer
= form_for @image do |f|
  - if @image.errors.any?
    .errors
      = @image.errors.full_messages.join(', ').downcase.capitalize
  = f.label :name
  = f.text_field :name
  = f.label "Image"
  = f.file_field :content
  = f.submit "Add Image"

%h2 Add an Image from the Internets
= form_for @image do |f|
  - if @image.errors.any?
    .errors
      = @image.errors.full_messages.join(', ').downcase.capitalize
  = f.label :name
  = f.text_field :name
  = f.label "Image"
  = f.text_field :remote_content_url
  = f.submit "Add Image"